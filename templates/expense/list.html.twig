{%  extends 'base.html.twig' %}

{% block body %}

    <div id="header">
        {% block header %}{{ parent() }}{% endblock %}


        <h1 class="heading-1"><i class="fas fa-receipt"></i> Liste des dépenses</h1>
    </div>

    <div class="conteneur">
        <div class="card">
            <div class="card-body">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Intitulé</th>
                        <th scope="col">Date</th>
                        <th scope="col">Magasin</th>
                        <th scope="col">Catégorie</th>
                        <th scope="col">Montant</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for e in expenses %}
                        <tr>
                            <td>{{ e.title }}</td>
                            <td>{{ e.date|date('d/m/Y') }}</td>
                            <td>{{ e.store }}</td>
                            <td>{{ e.category }}</td>
                            <td>{{ e.amount }} €</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock body %}